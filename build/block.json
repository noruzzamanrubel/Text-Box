{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "boomdevs/text-box",
  "version": "0.1.0",
  "title": "Text Box",
  "category": "text",
  "keywords": [
    "text",
    "box",
    "paragraph"
  ],
  "description": "Example block scaffolded with Create Block tool.",
  "supports": {
    "html": false
  },
  "textdomain": "text-box",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "text": {
      "type": "string"
    },
    "alignment": {
      "type": "string",
      "default": "left"
    },
    "text_color": {
      "type": "string",
      "default": "black"
    },
    "bg_color": {
      "type": "string",
      "default": "white"
    },
    "font_size": {
      "type": "number",
      "default": 15
    },
    "font_weight": {
      "type": "number",
      "default": 400
    },
    "line_height": {
      "type": "number"
    },
    "line_height_unit": {
      "type": "string",
      "default": "10"
    },
    "padding": {
      "type": "number",
      "default": 10
    }
  }
}